import java.util.*;

public class ArithmeticOperationsUsingSwitch {
    public static void main(String args[]) {
        Scanner s = new Scanner(System.in);
        int ch;

        System.out.println("Enter number a and b:");
        int a = s.nextInt();
        int b = s.nextInt();

        while (true) {
            System.out.println("\n1. Addition\t2. Subtraction\t3. Multiplication\t4. Division");
            System.out.print("Enter your choice: ");
            ch = s.nextInt();

            // Exit condition
            if (ch < 1 || ch > 4) {
                System.out.println("Exiting...");
                break;
            }

            // Logic: Perform arithmetic operation based on user choice
            switch (ch) {
                case 1:
                    System.out.println("Addition is " + (a + b));
                    break;
                case 2:
                    System.out.println("Subtraction is " + (a - b));
                    break;
                case 3:
                    System.out.println("Multiplication is " + (a * b));
                    break;
                case 4:
                    if (b == 0)
                        System.out.println("Cannot divide by zero.");
                    else
                        System.out.println("Division is " + (a / b));
                    break;
            }
        }

        // Code complete
    }
}

/*
Sample Input:
Enter number a and b:
10 5

1. Addition	2. Subtraction	3. Multiplication	4. Division
Enter your choice: 1
Addition is 15

1. Addition	2. Subtraction	3. Multiplication	4. Division
Enter your choice: 4
Division is 2

1. Addition	2. Subtraction	3. Multiplication	4. Division
Enter your choice: 7
Exiting...
*/
